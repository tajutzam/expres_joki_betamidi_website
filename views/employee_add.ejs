<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add employee</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        /* biar ada spasi di atas tabel */
      }

      th,
      td {
        border: 1px solid blue;
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: blue;
        color: white;
        /* background color untuk header */
      }

      tbody tr:nth-child(even) {
        background-color: #f9f9f9;
        /* background color untuk baris genap */
      }

      tbody tr:hover {
        background-color: #f5f5f5;
        /* background color pas dihover */
      }

      .form-container {
        display: flex;
        justify-content: space-between;
      }

      /* Style untuk setiap kolom */
      .form-col {
        flex: 1;
        margin-right: 20px; /* Jarak antar kolom */
      }
    </style>
  </head>

  <body>
    <nav
      style="list-style-type: none; padding: 0; margin: 0; text-align: center"
    >
      <ul>
        <li style="display: inline; margin-right: 10px">
          <a href="/" style="text-decoration: none; color: rgb(31, 10, 216) 0"
            >Home</a
          >
        </li>
        <li style="display: inline; margin-right: 10px">
          <a
            href="/stores/add"
            style="text-decoration: none; color: rgb(31, 10, 216) 0"
            >Add New Store</a
          >
        </li>
        <li style="display: inline">
          <a
            href="/employees"
            style="text-decoration: none; color: rgb(31, 10, 216) 0"
            >Employees</a
          >
        </li>
      </ul>
    </nav>

    <section style="text-align: center; max-width: 700px; margin: auto">
      <h1>Add Employee</h1>

      <h1>Store Name <%= store.name %></h1>
      <h1>Code :<%=store.code%></h1>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <ul style="list-style-type: none">
          <% errors.forEach(error => { %>
          <li style="color: red"><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
      <% } %>
      <form action="" method="post">
        <div class="form-container">
          <div class="form-col">
            <label for="first_name">First Name:</label>
            <br />
            <input type="text" id="first_name" name="firstName" /><br />
            <label for="last_name">Lastname Name:</label>
            <br />
            <input type="text" id="last_name" name="lastName" /><br />
            <label for="first_name">Date of birth:</label>
            <br />
            <input type="date" id="date" name="dateOfBirth" /><br />
          </div>
          <div class="form-col">
            <label for="education">Education Name:</label>
            <br />
            <select name="education">
              <option value="SMA">SMA</option>
              <option value="S1">S1</option>
              <option value="S2">S2</option>
              <option value="S3">s3</option>
            </select>
            <br />
            <label for="">Position :</label>
            <br />
            <input type="radio" value="Staff" name="position" id="staff" />
            <label for="staff">Staff</label>
            <br />
            <input
              type="radio"
              value="Supervisor"
              name="position"
              id="supervisor"
            />
            <label for="supervisor">Supervisor</label>
            <br />
            <input type="radio" value="Manager" name="position" id="manager" />
            <label for="manager">Manager</label>
            <br /><input type="radio" value="CEO" name="position" id="ceo" />
            <label for="ceo">CEO</label>
            <br />
            <label for="salary">Salary</label>
            <br />
            <input type="number" id="salary" name="salary" />
          </div>
        </div>
        <button type="submit">Add Employee</button>
      </form>
    </section>
    <script>
      function redirect(position) {
        if (position == "back") {
          window.location.href = `/employees`;
        } else {
          window.location.href = `/employees?position=${position}`;
        }
      }
    </script>
  </body>
</html>
