<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stores</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            /* biar ada spasi di atas tabel */
        }

        th,
        td {
            border: 1px solid blue;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: blue;
            color: white;
            /* background color untuk header */
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
            /* background color untuk baris genap */
        }

        tbody tr:hover {
            background-color: #f5f5f5;
            /* background color pas dihover */
        }
    </style>
</head>

<body>
    <nav style="list-style-type: none; padding: 0; margin: 0; text-align: center">
        <ul>
            <li style="display: inline; margin-right: 10px">
                <a href="/" style="text-decoration: none; color: rgb(31, 10, 216) 0">Home</a>
            </li>
            <li style="display: inline; margin-right: 10px">
                <a href="/stores/add" style="text-decoration: none; color: rgb(31, 10, 216) 0">Add New Store</a>
            </li>
            <li style="display: inline">
                <a href="/employees" style="text-decoration: none; color: rgb(31, 10, 216) 0">Employees</a>
            </li>
        </ul>
    </nav>
    <section style="text-align: center; max-width: 700px; margin: auto">
        <h1>Betamidi CMS</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% stores.forEach(store=> { %>
                    <tr>
                        <td>
                            <%= store.name %>
                        </td>
                        <td>
                            <%= store.code %>
                        </td>
                        <td>
                            <%= store.location %>
                        </td>
                        <td>
                            <%= store.category %>
                        </td>
                        <td style="text-align: center">
                            <a href="/stores/detail/<%=store.id%>" style="
                  display: inline-block;
                  padding: 8px 16px;
                  background-color: #3498db;
                  color: #fff;
                  text-decoration: none;
                  border-radius: 4px;
                ">See Detail</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </section>
</body>

</html>